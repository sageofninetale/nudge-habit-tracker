/* ============================================
   SPARKHABIT - BEHANCE-INSPIRED DESIGN SYSTEM
   Premium Dashboard with Glassmorphism
   ============================================ */

:root {
  /* Background Colors - Warm Dark Theme */
  --bg-primary: #191717;
  --bg-secondary: #1F1D1D;
  --bg-tertiary: #2A2828;

  /* Glass Card Surfaces - Warmer tones */
  --glass-bg: rgba(31, 29, 29, 0.6);
  --glass-bg-hover: rgba(31, 29, 29, 0.85);
  --glass-border: rgba(255, 255, 255, 0.1);
  --glass-border-hover: rgba(255, 255, 255, 0.15);

  /* Primary Accent - Vibrant Coral/Orange */
  --accent-primary: #E97D49;
  --accent-primary-light: #FF9366;
  --accent-primary-dark: #D66A38;
  --accent-gradient: linear-gradient(135deg, #E97D49 0%, #F8C163 100%);
  --accent-gradient-alt: linear-gradient(135deg, #FF6B6B 0%, #E97D49 100%);

  /* Secondary Accent - Warm Yellow/Gold */
  --accent-secondary: #F8C163;
  --accent-secondary-light: #FFD280;

  /* Tertiary Accent - Olive Green for variety */
  --accent-tertiary: #9EA943;
  --accent-tertiary-light: #B5C356;

  /* Dark Neon Accents */
  --neon-cyan: #00F0FF;
  --neon-pink: #FF006E;
  --neon-purple: #B026FF;
  --neon-green: #39FF14;

  /* Success Colors - Warmer green */
  --success: #9EA943;
  --success-light: #B5C356;
  --success-bg: rgba(158, 169, 67, 0.15);

  /* Text Colors */
  --text-primary: #FFFFFF;
  --text-secondary: #E5E5E5;
  --text-muted: #B0B0B0;
  --text-subtle: #808080;

  /* Shadows & Glows - Warmer tones */
  --shadow-sm: 0 4px 16px rgba(0, 0, 0, 0.4);
  --shadow-md: 0 8px 32px rgba(0, 0, 0, 0.5);
  --shadow-lg: 0 12px 48px rgba(0, 0, 0, 0.6);
  --shadow-xl: 0 20px 64px rgba(0, 0, 0, 0.7);

  --glow-primary: 0 0 30px rgba(233, 125, 73, 0.4);
  --glow-success: 0 0 24px rgba(158, 169, 67, 0.4);
  --glow-secondary: 0 0 24px rgba(248, 193, 99, 0.3);

  /* Dark Neon Glows */
  --glow-cyan: 0 0 20px rgba(0, 240, 255, 0.6), 0 0 40px rgba(0, 240, 255, 0.3);
  --glow-pink: 0 0 20px rgba(255, 0, 110, 0.6), 0 0 40px rgba(255, 0, 110, 0.3);
  --glow-purple: 0 0 20px rgba(176, 38, 255, 0.6), 0 0 40px rgba(176, 38, 255, 0.3);
  --glow-green: 0 0 20px rgba(57, 255, 20, 0.6), 0 0 40px rgba(57, 255, 20, 0.3);

  /* Premium Multi-Layer Shadows */
  --shadow-neon:
    0 0 10px rgba(233, 125, 73, 0.3),
    0 8px 32px rgba(0, 0, 0, 0.6),
    0 0 40px rgba(233, 125, 73, 0.2);

  --shadow-neon-strong:
    0 0 15px rgba(233, 125, 73, 0.5),
    0 12px 48px rgba(0, 0, 0, 0.7),
    0 0 60px rgba(233, 125, 73, 0.3),
    inset 0 1px 0 rgba(255, 255, 255, 0.1);

  /* Spacing */
  --spacing-xs: 8px;
  --spacing-sm: 12px;
  --spacing-md: 16px;
  --spacing-lg: 24px;
  --spacing-xl: 32px;
  --spacing-2xl: 48px;

  /* Border Radius */
  --radius-sm: 12px;
  --radius-md: 16px;
  --radius-lg: 20px;
  --radius-xl: 24px;
  --radius-full: 9999px;

  /* Transitions */
  --transition-fast: 150ms cubic-bezier(0.4, 0, 0.2, 1);
  --transition-base: 200ms cubic-bezier(0.4, 0, 0.2, 1);
  --transition-slow: 300ms cubic-bezier(0.4, 0, 0.2, 1);
}

/* ============================================
   GLOBAL RESET & BASE
   ============================================ */

*,
*::before,
*::after {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

body {
  margin: 0;
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'SF Pro Text', system-ui, sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  background: radial-gradient(ellipse at top, #2A2828 0%, #1F1D1D 40%, #191717 100%);
  background-attachment: fixed;
  color: var(--text-primary);
  line-height: 1.6;
  min-height: 100vh;
}

#root {
  min-height: 100vh;
}

/* ============================================
   APP CONTAINER
   ============================================ */

.app {
  min-height: 100vh;
  max-width: 1400px;
  margin: 0 auto;
  padding: 0;
  display: flex;
  flex-direction: column;
}

/* ============================================
   TOP NAVIGATION BAR
   ============================================ */

.top-nav {
  background: var(--glass-bg);
  backdrop-filter: blur(20px);
  border-bottom: 1px solid var(--glass-border);
  padding: var(--spacing-md) var(--spacing-xl);
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: var(--shadow-sm);
}

.app-branding {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
}

.app-logo {
  font-size: 28px;
  font-weight: 700;
  background: linear-gradient(135deg, var(--text-primary) 0%, var(--accent-primary-light) 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  letter-spacing: -0.02em;
}

.app-tagline {
  font-size: 13px;
  color: var(--text-muted);
  font-weight: 500;
  display: none;
}

/* ============================================
   MAIN DASHBOARD LAYOUT
   ============================================ */

.dashboard-container {
  flex: 1;
  padding: var(--spacing-xl);
  display: grid;
  grid-template-columns: 380px 1fr;
  gap: var(--spacing-lg);
  align-items: start;
}

.left-column {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-lg);
  position: sticky;
  top: calc(70px + var(--spacing-xl));
}

.right-column {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-lg);
}

/* ============================================
   GLASS CARD BASE STYLES
   ============================================ */

.glass-card {
  background: var(--glass-bg);
  backdrop-filter: blur(20px);
  border: 1px solid var(--glass-border);
  border-radius: var(--radius-lg);
  padding: var(--spacing-lg);
  box-shadow: var(--shadow-md);
  transition: all var(--transition-base);
}

.glass-card:hover {
  background: var(--glass-bg-hover);
  border-color: var(--glass-border-hover);
}

.card-header {
  margin-bottom: var(--spacing-md);
}

.card-title {
  font-size: 20px;
  font-weight: 700;
  color: var(--text-primary);
  letter-spacing: -0.01em;
  margin: 0;
}

.card-subtitle {
  font-size: 11px;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  color: var(--text-muted);
  font-weight: 600;
  margin-bottom: var(--spacing-xs);
}

/* ============================================
   TODAY SUMMARY CARD
   ============================================ */

.today-card {
  background: linear-gradient(135deg, rgba(233, 125, 73, 0.15) 0%, rgba(248, 193, 99, 0.08) 100%);
  border-color: rgba(233, 125, 73, 0.3);
  box-shadow: var(--shadow-md), var(--glow-primary);
}

.today-header {
  text-align: center;
  margin-bottom: var(--spacing-lg);
}

.today-date {
  font-size: 18px;
  font-weight: 700;
  color: var(--text-primary);
  margin-top: var(--spacing-xs);
}

.progress-ring-container {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: var(--spacing-lg) 0;
  position: relative;
}

.progress-ring {
  width: 140px;
  height: 140px;
  position: relative;
}

.progress-ring svg {
  transform: rotate(-90deg);
  width: 100%;
  height: 100%;
}

.progress-ring-bg {
  fill: none;
  stroke: rgba(233, 125, 73, 0.15);
  stroke-width: 8;
}

.progress-ring-fill {
  fill: none;
  stroke: url(#progressGradient);
  stroke-width: 8;
  stroke-linecap: round;
  transition: stroke-dashoffset 0.5s ease;
}

.progress-ring-text {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
}

.progress-percentage {
  font-size: 36px;
  font-weight: 800;
  background: var(--accent-gradient);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  line-height: 1;
}

.progress-label {
  font-size: 12px;
  color: var(--text-muted);
  margin-top: var(--spacing-xs);
  font-weight: 500;
}

.today-stats {
  display: flex;
  justify-content: space-around;
  padding-top: var(--spacing-md);
  border-top: 1px solid var(--glass-border);
}

.stat-item {
  text-align: center;
}

.stat-value {
  font-size: 24px;
  font-weight: 700;
  color: var(--text-primary);
  display: block;
}

.stat-label {
  font-size: 12px;
  color: var(--text-muted);
  margin-top: 4px;
  font-weight: 500;
}

/* ============================================
   ADD HABIT FORM
   ============================================ */

.add-habit-card {
  background: var(--glass-bg);
}

.habit-form {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

.form-group {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-xs);
}

.form-label {
  font-size: 12px;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  color: var(--text-muted);
}

.form-input,
.form-select {
  background: rgba(15, 20, 25, 0.5);
  border: 1px solid var(--glass-border);
  border-radius: var(--radius-sm);
  padding: 12px 14px;
  color: var(--text-primary);
  font-size: 15px;
  font-family: inherit;
  font-weight: 500;
  transition: all var(--transition-base);
}

.form-input:focus,
.form-select:focus {
  outline: none;
  border-color: var(--accent-primary);
  background: rgba(15, 20, 25, 0.7);
  box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
}

.form-input::placeholder {
  color: var(--text-subtle);
}

.btn-primary {
  background: var(--accent-gradient);
  border: none;
  border-radius: var(--radius-full);
  padding: 14px 28px;
  color: white;
  font-size: 15px;
  font-weight: 700;
  font-family: inherit;
  cursor: pointer;
  transition: all var(--transition-base);
  box-shadow: var(--shadow-sm), var(--glow-primary);
  letter-spacing: 0.02em;
}

.btn-primary:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-md), var(--glow-primary);
}

.btn-primary:active {
  transform: translateY(0);
}

/* ============================================
   HABIT DASHBOARD
   ============================================ */

.habits-dashboard {
  background: var(--glass-bg);
}

.dashboard-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-lg);
}

.habit-count-badge {
  background: rgba(233, 125, 73, 0.15);
  border: 1px solid rgba(233, 125, 73, 0.3);
  border-radius: var(--radius-full);
  padding: 6px 14px;
  font-size: 13px;
  font-weight: 600;
  color: var(--accent-primary-light);
}

.habits-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-sm);
  list-style: none;
  margin: 0;
  padding: 0;
}

.habit-card {
  background: rgba(15, 20, 25, 0.4);
  border: 1px solid var(--glass-border);
  border-radius: var(--radius-md);
  padding: var(--spacing-md);
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: var(--spacing-md);
  transition: all var(--transition-base);
  animation: fadeInUp 0.3s ease-out;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(10px);
  }

  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.habit-card:hover {
  background: rgba(15, 20, 25, 0.6);
  border-color: var(--glass-border-hover);
  transform: translateY(-2px);
  box-shadow: var(--shadow-sm);
}

.habit-card.completed {
  border-color: var(--success);
  background: rgba(16, 185, 129, 0.05);
}

.habit-info {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
  flex: 1;
}

.habit-icon {
  width: 56px;
  height: 56px;
  border-radius: var(--radius-full);
  background: rgba(233, 125, 73, 0.12);
  border: 2px solid rgba(233, 125, 73, 0.25);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28px;
  flex-shrink: 0;
  transition: all var(--transition-base);
}

.habit-card.completed .habit-icon {
  background: var(--success-bg);
  border-color: var(--success);
  box-shadow: var(--glow-success);
  animation: completePulse 0.5s ease-out;
}

@keyframes completePulse {

  0%,
  100% {
    transform: scale(1);
  }

  50% {
    transform: scale(1.1);
  }
}

.habit-details {
  flex: 1;
}

.habit-name {
  font-size: 16px;
  font-weight: 600;
  color: var(--text-primary);
  margin: 0 0 4px;
  letter-spacing: -0.01em;
}

.habit-meta {
  font-size: 13px;
  color: var(--text-muted);
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
  font-weight: 500;
}

.habit-streak {
  color: var(--accent-secondary);
  font-weight: 700;
  font-variant-numeric: tabular-nums;
}

.done-badge {
  background: var(--success-bg);
  border: 1px solid rgba(16, 185, 129, 0.3);
  color: var(--success-light);
  padding: 4px 10px;
  border-radius: var(--radius-full);
  font-size: 11px;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.habit-actions {
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
}

.btn-mark-done {
  background: var(--accent-gradient);
  border: none;
  border-radius: var(--radius-full);
  padding: 10px 20px;
  color: white;
  font-size: 14px;
  font-weight: 600;
  font-family: inherit;
  cursor: pointer;
  transition: all var(--transition-base);
  box-shadow: var(--shadow-sm);
  white-space: nowrap;
}

.btn-mark-done:hover {
  transform: translateY(-1px);
  box-shadow: var(--shadow-md);
}

.btn-mark-done.done {
  background: var(--success-bg);
  color: var(--success-light);
  border: 1px solid var(--success);
  cursor: default;
}

.btn-mark-done.done:hover {
  transform: none;
}

.btn-delete {
  background: transparent;
  border: none;
  color: var(--text-subtle);
  font-size: 20px;
  cursor: pointer;
  width: 36px;
  height: 36px;
  border-radius: var(--radius-full);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all var(--transition-fast);
}

.btn-delete:hover {
  background: rgba(239, 68, 68, 0.1);
  color: #EF4444;
}

.empty-state {
  text-align: center;
  padding: var(--spacing-2xl) var(--spacing-lg);
  color: var(--text-muted);
}

.empty-state-icon {
  font-size: 48px;
  margin-bottom: var(--spacing-md);
  opacity: 0.5;
}

.empty-state-text {
  font-size: 15px;
  line-height: 1.6;
}

/* ============================================
   AI COACH PANEL
   ============================================ */

.coach-panel {
  background: linear-gradient(135deg, rgba(233, 125, 73, 0.1) 0%, rgba(248, 193, 99, 0.06) 100%);
  border-color: rgba(233, 125, 73, 0.2);
}

.coach-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-lg);
}

.coach-title {
  font-size: 20px;
  font-weight: 700;
  background: linear-gradient(135deg, var(--text-primary) 0%, var(--accent-primary-light) 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin: 0;
}

.btn-ask-coach {
  background: var(--accent-gradient);
  border: none;
  border-radius: var(--radius-full);
  padding: 10px 20px;
  color: white;
  font-size: 14px;
  font-weight: 700;
  font-family: inherit;
  cursor: pointer;
  transition: all var(--transition-base);
  box-shadow: var(--shadow-sm);
  letter-spacing: 0.02em;
}

.btn-ask-coach:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-md), var(--glow-primary);
}

.btn-ask-coach:active {
  transform: translateY(0);
}

.btn-ask-coach:disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

.coach-message {
  background: rgba(15, 20, 25, 0.5);
  border: 1px solid var(--glass-border);
  border-radius: var(--radius-md);
  padding: var(--spacing-md);
  margin-bottom: var(--spacing-md);
}

.coach-text {
  font-size: 15px;
  line-height: 1.7;
  color: var(--text-secondary);
  margin: 0 0 var(--spacing-sm);
}

.coach-secondary {
  font-size: 14px;
  color: var(--text-muted);
  margin: 0;
  line-height: 1.6;
}

.coach-error {
  background: rgba(239, 68, 68, 0.1);
  border: 1px solid rgba(239, 68, 68, 0.3);
  border-radius: var(--radius-md);
  padding: var(--spacing-sm) var(--spacing-md);
  color: #EF4444;
  font-size: 13px;
  margin-bottom: var(--spacing-md);
}

/* ============================================
   FOOTER
   ============================================ */

.app-footer {
  padding: var(--spacing-lg);
  text-align: center;
  font-size: 12px;
  color: var(--text-subtle);
  opacity: 0.7;
}

/* ============================================
   RESPONSIVE DESIGN
   ============================================ */

@media (max-width: 1200px) {
  .dashboard-container {
    grid-template-columns: 340px 1fr;
    gap: var(--spacing-md);
  }

  .left-column {
    position: static;
  }
}

@media (max-width: 960px) {
  .dashboard-container {
    grid-template-columns: 1fr;
    padding: var(--spacing-lg);
  }

  .left-column {
    position: static;
  }

  .app-tagline {
    display: none;
  }
}

@media (max-width: 640px) {
  .top-nav {
    padding: var(--spacing-sm) var(--spacing-md);
  }

  .app-logo {
    font-size: 24px;
  }

  .dashboard-container {
    padding: var(--spacing-md);
    gap: var(--spacing-md);
  }

  .glass-card {
    padding: var(--spacing-md);
  }

  .habit-card {
    flex-direction: column;
    align-items: flex-start;
  }

  .habit-actions {
    width: 100%;
    justify-content: space-between;
  }

  .coach-header {
    flex-direction: column;
    align-items: flex-start;
    gap: var(--spacing-sm);
  }

  .btn-ask-coach {
    width: 100%;
  }

  .progress-ring {
    width: 120px;
    height: 120px;
  }

  .progress-percentage {
    font-size: 32px;
  }
}

/* ============================================
   ACCESSIBILITY
   ============================================ */

@media (prefers-reduced-motion: reduce) {

  *,
  *::before,
  *::after {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
  }
}

*:focus-visible {
  outline: 2px solid var(--accent-primary);
  outline-offset: 2px;
}

button:focus-visible {
  outline: 3px solid var(--accent-primary);
  outline-offset: 2px;
}
/* ============================================
   DASHBOARD NAVIGATION TABS
   ============================================ */

.dashboard-tabs {
  background: var(--glass-bg);
  backdrop-filter: blur(20px);
  border-bottom: 1px solid var(--glass-border);
  padding: 0 var(--spacing-xl);
  display: flex;
  gap: var(--spacing-xs);
  position: sticky;
  top: 70px;
  z-index: 90;
}

.tab-button {
  background: transparent;
  border: none;
  border-bottom: 3px solid transparent;
  padding: var(--spacing-md) var(--spacing-lg);
  color: var(--text-muted);
  font-size: 14px;
  font-weight: 600;
  font-family: inherit;
  cursor: pointer;
  transition: all var(--transition-base);
  position: relative;
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
}

.tab-button:hover {
  color: var(--text-secondary);
  background: rgba(255, 255, 255, 0.03);
}

.tab-button.active {
  color: var(--accent-primary);
  border-bottom-color: var(--accent-primary);
  box-shadow: 0 3px 12px rgba(233, 125, 73, 0.3);
}

.tab-button.active::after {
  content: '';
  position: absolute;
  bottom: -3px;
  left: 0;
  right: 0;
  height: 3px;
  background: var(--accent-gradient);
  box-shadow: var(--glow-primary);
}

.tab-icon {
  font-size: 16px;
}

/* ============================================
   DASHBOARD VIEWS
   ============================================ */

.dashboard-view {
  flex: 1;
  padding: var(--spacing-xl);
  animation: fadeIn 0.3s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* ============================================
   STATS CARDS (Weekly Progress)
   ============================================ */

.stats-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
  gap: var(--spacing-lg);
  margin-bottom: var(--spacing-xl);
}

.stat-card {
  background: var(--glass-bg);
  backdrop-filter: blur(20px);
  border: 1px solid var(--glass-border);
  border-radius: var(--radius-lg);
  padding: var(--spacing-lg);
  box-shadow: var(--shadow-md);
  transition: all var(--transition-base);
}

.stat-card:hover {
  transform: translateY(-4px);
  box-shadow: var(--shadow-neon);
  border-color: var(--glass-border-hover);
}

.stat-card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-md);
}

.stat-card-title {
  font-size: 13px;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  color: var(--text-muted);
  font-weight: 600;
}

.stat-card-icon {
  font-size: 24px;
  opacity: 0.6;
}

.stat-card-value {
  font-size: 36px;
  font-weight: 800;
  background: var(--accent-gradient);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  line-height: 1.2;
  margin-bottom: var(--spacing-xs);
}

.stat-card-label {
  font-size: 14px;
  color: var(--text-secondary);
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
}

.trend-indicator {
  font-size: 12px;
  font-weight: 700;
  padding: 2px 8px;
  border-radius: var(--radius-full);
}

.trend-indicator.up {
  color: var(--success);
  background: var(--success-bg);
}

.trend-indicator.down {
  color: #EF4444;
  background: rgba(239, 68, 68, 0.1);
}

/* ============================================
   CHART CONTAINER
   ============================================ */

.chart-container {
  background: var(--glass-bg);
  backdrop-filter: blur(20px);
  border: 1px solid var(--glass-border);
  border-radius: var(--radius-lg);
  padding: var(--spacing-xl);
  box-shadow: var(--shadow-md);
  margin-bottom: var(--spacing-xl);
}

.chart-header {
  margin-bottom: var(--spacing-lg);
}

.chart-title {
  font-size: 18px;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: var(--spacing-xs);
}

.chart-subtitle {
  font-size: 13px;
  color: var(--text-muted);
}

/* ============================================
   ACHIEVEMENT BADGES
   ============================================ */

.achievements-header {
  margin-bottom: var(--spacing-xl);
  text-align: center;
}

.achievements-progress {
  font-size: 16px;
  color: var(--text-secondary);
  margin-bottom: var(--spacing-sm);
}

.achievements-count {
  font-size: 48px;
  font-weight: 800;
  background: linear-gradient(135deg, var(--neon-purple) 0%, var(--neon-pink) 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.badges-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
  gap: var(--spacing-lg);
}

.badge-card {
  background: var(--glass-bg);
  backdrop-filter: blur(20px);
  border: 1px solid var(--glass-border);
  border-radius: var(--radius-lg);
  padding: var(--spacing-xl);
  text-align: center;
  transition: all var(--transition-base);
  position: relative;
  overflow: hidden;
}

.badge-card.unlocked {
  border-color: var(--neon-purple);
  box-shadow: var(--shadow-md), var(--glow-purple);
  animation: badgeUnlock 0.6s ease-out;
}

@keyframes badgeUnlock {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
}

.badge-card.locked {
  opacity: 0.5;
  filter: grayscale(1);
}

.badge-card:hover:not(.locked) {
  transform: translateY(-8px);
  box-shadow: var(--shadow-neon-strong);
}

.badge-icon {
  font-size: 64px;
  margin-bottom: var(--spacing-md);
  display: block;
}

.badge-name {
  font-size: 16px;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: var(--spacing-xs);
}

.badge-description {
  font-size: 13px;
  color: var(--text-muted);
  margin-bottom: var(--spacing-md);
  line-height: 1.5;
}

.badge-progress {
  width: 100%;
  height: 6px;
  background: rgba(255, 255, 255, 0.1);
  border-radius: var(--radius-full);
  overflow: hidden;
  margin-bottom: var(--spacing-xs);
}

.badge-progress-fill {
  height: 100%;
  background: var(--accent-gradient);
  border-radius: var(--radius-full);
  transition: width 0.5s ease;
  box-shadow: var(--glow-primary);
}

.badge-unlock-date {
  font-size: 11px;
  color: var(--text-subtle);
  font-style: italic;
}

/* ============================================
   CALENDAR VIEW
   ============================================ */

.calendar-container {
  background: var(--glass-bg);
  backdrop-filter: blur(20px);
  border: 1px solid var(--glass-border);
  border-radius: var(--radius-lg);
  padding: var(--spacing-xl);
  box-shadow: var(--shadow-md);
}

.calendar-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-xl);
}

.calendar-month {
  font-size: 24px;
  font-weight: 700;
  color: var(--text-primary);
}

.calendar-nav {
  display: flex;
  gap: var(--spacing-sm);
}

.calendar-nav-btn {
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid var(--glass-border);
  border-radius: var(--radius-sm);
  width: 36px;
  height: 36px;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  color: var(--text-secondary);
  font-size: 18px;
  transition: all var(--transition-base);
}

.calendar-nav-btn:hover {
  background: rgba(255, 255, 255, 0.1);
  border-color: var(--accent-primary);
  color: var(--accent-primary);
}

.calendar-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: var(--spacing-xs);
}

.calendar-day-header {
  text-align: center;
  font-size: 12px;
  font-weight: 600;
  color: var(--text-muted);
  padding: var(--spacing-sm);
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.calendar-day {
  aspect-ratio: 1;
  background: rgba(255, 255, 255, 0.03);
  border: 1px solid var(--glass-border);
  border-radius: var(--radius-sm);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  font-weight: 600;
  cursor: pointer;
  transition: all var(--transition-base);
  position: relative;
}

.calendar-day:hover {
  background: rgba(255, 255, 255, 0.08);
  transform: scale(1.05);
}

.calendar-day.empty {
  opacity: 0.3;
  cursor: default;
}

.calendar-day.empty:hover {
  transform: none;
}

.calendar-day.today {
  border-color: var(--accent-primary);
  box-shadow: 0 0 12px rgba(233, 125, 73, 0.4);
}

.calendar-day.perfect {
  background: linear-gradient(135deg, rgba(57, 255, 20, 0.2) 0%, rgba(158, 169, 67, 0.2) 100%);
  border-color: var(--neon-green);
  box-shadow: var(--glow-green);
  color: var(--neon-green);
}

.calendar-day.partial {
  background: linear-gradient(135deg, rgba(248, 193, 99, 0.2) 0%, rgba(233, 125, 73, 0.2) 100%);
  border-color: var(--accent-secondary);
  color: var(--accent-secondary);
}

.calendar-day.none {
  opacity: 0.5;
}

.calendar-legend {
  display: flex;
  justify-content: center;
  gap: var(--spacing-xl);
  margin-top: var(--spacing-xl);
  padding-top: var(--spacing-lg);
  border-top: 1px solid var(--glass-border);
}

.legend-item {
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
  font-size: 13px;
  color: var(--text-muted);
}

.legend-dot {
  width: 12px;
  height: 12px;
  border-radius: 50%;
  border: 2px solid currentColor;
}

.legend-dot.perfect {
  background: var(--neon-green);
  border-color: var(--neon-green);
  box-shadow: var(--glow-green);
}

.legend-dot.partial {
  background: var(--accent-secondary);
  border-color: var(--accent-secondary);
}

.legend-dot.none {
  background: transparent;
  border-color: var(--text-subtle);
}

/* ============================================
   NUDGE BRANDING - HERO SECTION
   ============================================ */

.hero-section {
  background: #1A1A1A;
  padding: 3rem 2rem 2.5rem;
  box-shadow: inset 0 -1px 0 rgba(255,255,255,0.05);
  position: relative;
  overflow: hidden;
}

.orbital-line {
  width: 100%;
  height: 80px;
  margin-bottom: 2rem;
  opacity: 0.8;
}

.current-node {
  filter: drop-shadow(0 0 8px rgba(255,255,255,0.6));
}

.hero-content {
  text-align: center;
  max-width: 800px;
  margin: 0 auto;
}

.hero-heading {
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
  margin: 0 0 1rem;
  line-height: 1.1;
}

.hero-heading-light {
  font-size: 2.5rem;
  font-weight: 700;
  color: #9ca3af;
  text-transform: lowercase;
  letter-spacing: -0.02em;
}

.hero-heading-bright {
  font-size: 3rem;
  font-weight: 800;
  color: #FFFFFF;
  text-transform: lowercase;
  letter-spacing: -0.03em;
}

.hero-tagline {
  font-size: 1rem;
  color: #808080;
  font-weight: 400;
  margin: 0;
}

/* ============================================
   WELCOME MODAL
   ============================================ */

.welcome-modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.85);
  backdrop-filter: blur(8px);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  animation: fadeIn 0.3s ease-out;
}

.welcome-modal {
  background: var(--glass-bg);
  backdrop-filter: blur(20px);
  border: 1px solid var(--glass-border);
  border-radius: var(--radius-xl);
  padding: var(--spacing-2xl);
  max-width: 480px;
  width: 90%;
  box-shadow: var(--shadow-neon-strong);
  animation: slideUp 0.4s ease-out;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.welcome-title {
  font-size: 28px;
  font-weight: 800;
  background: var(--accent-gradient);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin: 0 0 var(--spacing-xs);
  text-align: center;
}

.welcome-subtitle {
  font-size: 14px;
  color: var(--text-muted);
  text-align: center;
  margin: 0 0 var(--spacing-xl);
}

.welcome-form {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-lg);
}

.welcome-actions {
  display: flex;
  gap: var(--spacing-md);
  margin-top: var(--spacing-md);
}

.btn-secondary {
  flex: 1;
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid var(--glass-border);
  border-radius: var(--radius-full);
  padding: 14px 28px;
  color: var(--text-secondary);
  font-size: 15px;
  font-weight: 600;
  font-family: inherit;
  cursor: pointer;
  transition: all var(--transition-base);
}

.btn-secondary:hover {
  background: rgba(255, 255, 255, 0.1);
  border-color: var(--glass-border-hover);
}

.btn-primary:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

/* ============================================
   GREETING SECTION
   ============================================ */

.greeting-section {
  padding: var(--spacing-xl) var(--spacing-xl) var(--spacing-md);
}

.greeting-text {
  font-size: 32px;
  font-weight: 700;
  color: var(--text-primary);
  margin: 0;
  letter-spacing: -0.02em;
}

/* ============================================
   OVERVIEW GRID LAYOUT
   ============================================ */

.overview-grid {
  display: grid;
  grid-template-columns: 380px 1fr;
  gap: var(--spacing-lg);
  padding: 0 var(--spacing-xl) var(--spacing-xl);
  align-items: start;
}

/* ============================================
   DASHBOARD PREVIEWS
   ============================================ */

.dashboard-previews {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: var(--spacing-lg);
  padding: var(--spacing-xl);
  background: rgba(255, 255, 255, 0.02);
  border-top: 1px solid var(--glass-border);
}

.preview-card {
  background: var(--glass-bg);
  backdrop-filter: blur(20px);
  border: 1px solid var(--glass-border);
  border-radius: var(--radius-lg);
  padding: var(--spacing-lg);
  cursor: pointer;
  transition: all var(--transition-base);
}

.preview-card:hover {
  transform: translateY(-4px);
  box-shadow: var(--shadow-neon);
  border-color: var(--accent-primary);
}

.preview-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-xs);
}

.preview-title {
  font-size: 18px;
  font-weight: 700;
  color: var(--text-primary);
  margin: 0;
}

.preview-link {
  font-size: 13px;
  color: var(--accent-primary);
  font-weight: 600;
  opacity: 0.7;
  transition: opacity var(--transition-fast);
}

.preview-card:hover .preview-link {
  opacity: 1;
}

.preview-subtitle {
  font-size: 13px;
  color: var(--text-muted);
  margin: 0 0 var(--spacing-md);
}

.mini-chart {
  margin-top: var(--spacing-md);
}

/* Badges Preview Grid */
.badges-preview-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: var(--spacing-sm);
  margin-top: var(--spacing-md);
}

.badge-preview {
  aspect-ratio: 1;
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid var(--glass-border);
  border-radius: var(--radius-md);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24px;
  transition: all var(--transition-base);
}

.badge-preview.unlocked {
  border-color: var(--neon-purple);
  box-shadow: var(--glow-purple);
  background: rgba(176, 38, 255, 0.1);
}

.badge-preview.locked {
  opacity: 0.3;
  filter: grayscale(1);
}

/* Calendar Preview Grid */
.calendar-preview-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 4px;
  margin-top: var(--spacing-md);
}

.calendar-preview-day {
  aspect-ratio: 1;
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid var(--glass-border);
  border-radius: 4px;
  transition: all var(--transition-fast);
}

.calendar-preview-day.perfect {
  background: rgba(57, 255, 20, 0.2);
  border-color: var(--neon-green);
  box-shadow: 0 0 8px rgba(57, 255, 20, 0.3);
}

.calendar-preview-day.partial {
  background: rgba(248, 193, 99, 0.2);
  border-color: var(--accent-secondary);
}

.calendar-preview-day.none {
  opacity: 0.3;
}

/* ============================================
   RESPONSIVE - NUDGE UPDATES
   ============================================ */

@media (max-width: 1200px) {
  .overview-grid {
    grid-template-columns: 340px 1fr;
  }
  
  .dashboard-previews {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (max-width: 960px) {
  .hero-heading-light {
    font-size: 2rem;
  }
  
  .hero-heading-bright {
    font-size: 2.5rem;
  }
  
  .greeting-text {
    font-size: 28px;
  }
  
  .overview-grid {
    grid-template-columns: 1fr;
  }
  
  .dashboard-previews {
    grid-template-columns: 1fr;
  }
}

@media (max-width: 640px) {
  .hero-section {
    padding: 2rem 1rem 1.5rem;
  }
  
  .orbital-line {
    height: 60px;
  }
  
  .hero-heading-light {
    font-size: 1.75rem;
  }
  
  .hero-heading-bright {
    font-size: 2.25rem;
  }
  
  .hero-tagline {
    font-size: 0.9rem;
  }
  
  .greeting-section {
    padding: var(--spacing-lg) var(--spacing-md) var(--spacing-sm);
  }
  
  .greeting-text {
    font-size: 24px;
  }
  
  .overview-grid {
    padding: 0 var(--spacing-md) var(--spacing-md);
  }
  
  .dashboard-previews {
    padding: var(--spacing-lg) var(--spacing-md);
  }
  
  .welcome-modal {
    padding: var(--spacing-xl);
  }
  
  .welcome-actions {
    flex-direction: column;
  }
}

/* ============================================
   ENHANCED HOVER EFFECTS
   ============================================ */

.habit-card {
  transition: all var(--transition-base);
}

.habit-card:hover:not(.completed) {
  transform: translateY(-2px) scale(1.005);
  box-shadow: var(--shadow-md);
}

.glass-card:hover {
  transform: translateY(-1px);
}

.btn-primary:hover:not(:disabled) {
  transform: translateY(-1px);
  filter: brightness(1.1);
}

.btn-mark-done:hover:not(.done) {
  transform: translateY(-1px);
  filter: brightness(1.15);
}
